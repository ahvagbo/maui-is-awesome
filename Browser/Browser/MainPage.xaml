<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Browser.MainPage"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="60,*">
        <Grid ColumnDefinitions="60,60,60,*"
                    Grid.Row="0">
            <Button Text="B" Grid.Column="0" />
            <Button Text="F" Grid.Column="1" />
            <Button Text="R" Grid.Column="2" />
            <Entry Placeholder="Enter a URL"
                   PlaceholderColor="{ AppThemeBinding Light={StaticResource Gray300}, Dark=WhiteSmoke }"
                   Keyboard="Url"
                   Grid.Column="3" />
        </Grid>

        <WebView Source="https://www.bing.com"
                 Grid.Row="1" />
    </Grid>

</ContentPage>
